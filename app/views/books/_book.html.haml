%li
  .book-item
    = link_to image_tag(book.photo.url(:thumb)), book_path(book)
    .book-item-title
      = link_to book.title, book_path(book)
    .book-item-author
      = "By: #{book.author_name}"
    .row
      .small-4.columns
        %label.book-price-thumb= number_to_currency(book.unit_price)
      .small-8.columns
        %span.has-tip{title: "Add to cart"}
          = link_to image_tag(image_url('cart.png'), size: "30x30"), add_book_carts_path(book_id: book.id), method: "post"